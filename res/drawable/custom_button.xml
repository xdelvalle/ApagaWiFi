<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#FFFF0000" android:startColor="#BBFF0000" />
            <stroke android:width="3dp" android:color="#FF000000" />
            <corners android:radius="25dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#FF00FF00" android:startColor="#BB00FF00" />
            <stroke android:width="3dp" android:color="#FF000000" />
            <corners android:radius="25dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#FF000000" android:startColor="#BB000000" />
            <stroke android:width="3dp" android:color="#FFFFFFFF" />
            <corners android:radius="25dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
</selector>